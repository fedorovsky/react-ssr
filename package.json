  "license": "MIT",
  "author": "Anton Fedorovskyi <a.fedorovskyi@plarium.com>",
  "main": "./dist/server.js",
  "scripts": {
    "client": "webpack --config webpack.client.js --watch",
    "prettier": "prettier --write \"**/*.js\"",
    "server": "webpack --config webpack.server.js --watch",
