{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "allowJs": true
  },
  "include": ["./src/**/**/*"],
  "exclude": ["dist", "node_modules"]
}
