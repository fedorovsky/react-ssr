{
  "name": "react-ssr",
  "version": "1.0.0",
  "repository": "git@github.com:fedorovsky/react-ssr.git",
  "license": "MIT",
  "author": "Anton Fedorovskyi <anton.fedorovsky@gmail.com>",
  "main": "./dist/server.js",
  "scripts": {
    "build": "npm-run-all --parallel server:prod client:prod",
    "client:dev": "webpack --config webpack.client.js --watch",
    "client:prod": "webpack --config webpack.client.prod.js",
    "dev": "npm-run-all --parallel server:dev client:dev server:run",
    "prettier": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "server:dev": "webpack --config webpack.server.js --watch",
    "server:prod": "webpack --config webpack.server.prod.js",
    "server:run": "nodemon ./dist/server.js",
    "start": "node ./dist/server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-regenerator": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.6.0",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.2",
    "@types/react-router-dom": "^4.3.5",
    "babel-plugin-styled-components": "^1.10.6",
    "colors": "^1.3.3",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "ip": "^1.1.5",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-redux": "^7.1.1",
    "react-router-config": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-select": "^3.0.4",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "reload": "^3.0.1",
    "reselect": "^4.0.0",
    "styled-components": "^4.3.2",
    "styled-normalize": "^8.0.6"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^3.0.5",
    "ignore-styles": "^5.0.1",
    "isomorphic-style-loader": "^5.1.0",
    "lint-staged": "^9.2.5",
    "mini-css-extract-plugin": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-node-externals": "^1.7.2"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 9",
    "last 5 Android versions"
  ],
  "lint-staged": {
    "*.js": [
      "npm run prettier --write",
      "git add"
    ]
  }
}
